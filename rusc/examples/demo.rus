# Demo of RuScript


class example {
    a;
    b;
    fn add(self) {
        return self.a + self.b;
    }
};


a = 1;
b = 2;

class example2 {
    fn bridge(self) {
        global a;
        global b;
        obj = new example(a, b);
        return obj.add();
    }
};


obj2 = new example2();


c = obj2.bridge(); # c should be 3
print c;


