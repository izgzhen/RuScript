# Demo of RuScript


class example {
    a;
    b;
    fn add(self) {
        return self.a + self.b;
    }
};


a = 1;
b = 2;

obj = new example(a, b);

class example2 {
    fn bridge(self) {
        global obj;
        return obj.add();
    }
};


obj2 = new example2();


c = obj2.bridge(); # c should be 3
print c;


print obj.a; # show be 1
